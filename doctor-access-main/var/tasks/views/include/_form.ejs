<form action="/api/users" method="POST" enctype="multipart/form-data" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" style="color: #160e33; font-weight: 600;">Patient Name:</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Enter your name">
        </div>
        <div class="form-group">
            <label for="Email" style="color: #160e33; font-weight: 600;">Age:</label>
            <input type="number" class="new-box" name="age" value="" style="padding: 9px;" placeholder="Enter your age">
        </div>
        <div class="form-group">
            <label for="name" style="color: #160e33; font-weight: 600;">Mobile Number:</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="phone_number" value="" placeholder="Enter your mobile number">
        </div>
        <div class="form-group">
            <label for="gender" style="color: #160e33; font-weight: 600; padding-right: 180px;">Gender:</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male">
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female">
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div>

        <div class="form-group">
            <label for="name" style="color: #160e33; font-weight: 600;">Consultation:</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="consultation" value="" placeholder="Enter your consultation">
        </div>

        <div class="form-group">
            <label for="imagei" style="color: #160e33; font-weight: 600; padding-right: 80px;">Upload Input Scan Image:</label>
            <input type="file" id="imagei" name="imagei" accept="image/*"><br><br>            
        </div>

        <div class="form-group">
            <label for="imageo" style="color: #160e33; font-weight: 600; padding-right: 20px;">Upload Segmented Output Image:</label>
            <input type="file" id="imageo" name="imageo" accept="image/*"><br><br>
        </div>

        

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
 
 
 
 